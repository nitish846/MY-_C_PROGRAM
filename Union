#include<stdio.h>
union data{
    int age;
    float mark;
    char name[20];
};
int main(){
    union data d;
    printf("enter the name\n");
    scanf("%s",d.name);
    printf("name:%s",d.name);
    printf("enter the age\n");
    scanf("%d",&d.age);
    printf("age:%d\n",d.age);
    printf("enter the mark\n");
    scanf("%f",&d.mark);
    printf("mark:%f\n",d.mark);
}
